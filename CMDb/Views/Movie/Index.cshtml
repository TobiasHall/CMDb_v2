@model MovieViewModel
    <section class="breadcrumb-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-area-content">
                        <h1>Movies Page</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="portfolio-area pt-60">
        <div class="container">
            <h1><i class="icofont icofont-movie"></i> Populary movies</h1>
            <br />
            <hr />
            <div class="row">
                <div class="col-lg-9">
                    <div class="row portfolio-item">
                        @for (int i = 0; i < 10; i++)
                        {
                            @if (i > 2)
                            {
                                <div class="col-md-4 col-sm-6 soon released">
                                    <div class="single-portfolio">
                                        <div class="single-portfolio-img">
                                            <a href="/Movie/Detail?id=@Model.Movies[i].ImdbId">
                                                <img src="@Html.DisplayFor(model => model.Movies[i].Poster)" alt="about" onerror="this.src='/img/image-not-found.jpg'"/>
                                            </a>
                                        </div>
                                        <div class="portfolio-content">
                                            <h2>@Html.DisplayFor(model => model.Movies[i].Title)</h2>
                                            <div class="review">
                                                <div class="author-review">
                                                    <i class="icofont icofont-star"></i>
                                                    <i class="icofont icofont-star"></i>
                                                    <i class="icofont icofont-star"></i>
                                                    <i class="icofont icofont-star"></i>
                                                    <i class="icofont icofont-star"></i>
                                                </div>
                                                <h4>180k voters</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        }
                    </div>
                </div>

            </div>
        </div>
    </section>