@model SearchPageViewModel

    <section class="breadcrumb-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-area-content">
                        <h1>Movie Detalied Page</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>

<section class="portfolio-area pt-60">
    <div class="container">
        <div class="col-lg-6 text-center text-lg-left">
            <div class="section-title">
                <h1><i class="icofont icofont-movie"></i>What movie did you mean? </h1>
            </div>
        </div>
        <br />
        <hr />
        <div class="row">
            <div class="col-lg-9">
                <div class="row portfolio-item">
                    @foreach (var movie in Model.Searches)
                    {
                        <div class="col-md-4 col-sm-6 soon released">
                            <div class="single-portfolio">
                                <div class="single-portfolio-img">
                                    <a href="/Movie/Detail?id=@movie.ImdbID">
                                        <img src="@Html.DisplayFor(model =>movie.Poster)" alt="about" onerror="this.src='/img/image-not-found.jpg'" />
                                    </a>
                                </div>
                                <div class="portfolio-content">                                    
                                    <h4>@Html.ActionLink(movie.Title, "Search", "Movie", new {id = movie.ImdbID})</h4>
                                    <p>@movie.Year</p>
                                    <div class="review">
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>