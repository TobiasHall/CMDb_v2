@model MovieViewModel
@section scripts{
    <script src="~/js/LikeDisLike.js"></script>
    <script src="~/js/togglePlot.js"></script>
}

<section class="hero-area" id="home">
    <div class="container">
        <div class="hero-area-slider">
            @for (int i = 0; i < 3; i++)
            {
                <div class="row hero-area-slide">
                    <div class="col-lg-6 col-md-5">
                        <div class="hero-area-content">
                            <img src="@Html.DisplayFor(model => model.Movies[i].Poster)" alt="about" />
                            <h2 class="news-date">Top 3 on<br /> CMDb</h2>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-7">
                        <div class="hero-area-content pr-50">
                            <h2>@Html.DisplayFor(model => model.Movies[i].Title)</h2>
                            <div class="review">
                                @foreach (var rating in Model.Movies[i].Ratings)
                                {

                                    <h6>@Html.DisplayFor(item => rating.Source)</h6>
                                    <p>@Html.DisplayFor(item => rating.Value)</p>


                                }
                                <h6>CMDb rating</h6>
                                <div class="like">
                                    <button id="btn-like" class="icofont icofont-thumbs-up" onclick="likeMovie(this, '@Model.Movies[i].ImdbId');this.disabled = true">@Html.DisplayFor(item => item.Movies[i].NumberOfLikes)</button>
                                </div>
                                <div class="dislike">
                                    <button id="btn-dislike" class="icofont icofont-thumbs-down" onclick="disLikeMovie(this, '@Model.Movies[i].ImdbId'); this.disabled = true">@Html.DisplayFor(item => item.Movies[i].NumberOfDislikes)</button>
                                </div>
                            </div>
                            <div class="plot-div">
                                @Html.DisplayFor(model => model.Movies[i].Plot)
                            </div>
                            <a class="more" href="#">Read more</a>
                            <div class="slide-trailor">
                                <h2>@Html.ActionLink("Go to movie", "Detail", "Movie", new {id = Model.Movies[i].Title })</h2>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="hero-area-thumb">
            <div class="thumb-prev">
                <div class="row hero-area-slide">
                    <div class="col-lg-6">
                        <div class="hero-area-content">
                            <img src="@Html.DisplayFor(model => model.Movies[1].Poster)" alt="about" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <p>@Html.DisplayFor(model => model.Movies[1].Plot)</p>
                    </div>
                </div>
            </div>
            <div class="thumb-next">
                <div class="row hero-area-slide">
                    <div class="col-lg-6">
                        <div class="hero-area-content">
                            <img src="@Html.DisplayFor(model => model.Movies[2].Poster)" alt="about" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <p>@Html.DisplayFor(model => model.Movies[2].Plot)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="portfolio-area pt-60">
    <div class="container">
        <h1><i class="icofont icofont-movie"></i> Best movies at CMDb</h1>
        <br />
        <hr />
        <div class="row">
            <div class="col-lg-9">
                <div class="row portfolio-item">
                    @foreach (var movie in Model.Movies)
                    {
                        <div class="col-md-4 col-sm-6 soon released">
                            <div class="single-portfolio">
                                <div class="single-portfolio-img">

                                </div>
                                <div class="portfolio-content">
                                    <img src="@movie.Poster" alt="about" />
                                    <h2>@Html.ActionLink(movie.Title, "Detail", "Movie", new {id = movie.ImdbId })</h2>
                                    <div class="review">
                                        <div class="author-review">
                                            <i class="icofont icofont-star"></i>
                                            <i class="icofont icofont-star"></i>
                                            <i class="icofont icofont-star"></i>
                                            <i class="icofont icofont-star"></i>
                                            <i class="icofont icofont-star"></i>
                                        </div>
                                        <h4>180k voters</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</section>
